@model IEnumerable<Uni_LibraryManagement.Data.Entities.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Uni_LibraryManagement.Authentication.AuthenticationManager.LoggedUser != null &&
     Uni_LibraryManagement.Authentication.AuthenticationManager.LoggedUser.IsAdmin)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityAvailable)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (Uni_LibraryManagement.Authentication.AuthenticationManager.LoggedUser.IsAdmin)
                {
                    <span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                @Html.ActionLink("Issue", "Create", "BookIssues", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
